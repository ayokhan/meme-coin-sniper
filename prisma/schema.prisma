generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Token {
  id              String   @id @default(cuid())
  contractAddress String   @unique
  symbol          String
  name            String
  chain           String
  source          String?  @default("dexscreener") // birdeye | moralis | dexscreener | twitter
  
  dexId           String?
  pairAddress     String?
  
  marketCap       Float?
  liquidity       Float?
  volume24h       Float?
  priceUSD        Float?
  priceChange24h  Float?
  
  viralScore      Int      @default(0)
  scoreBreakdown  Json?
  
  isHoneypot      Boolean  @default(false)
  mintAuthority   Boolean  @default(false)
  freezeAuthority Boolean  @default(false)
  topHolderPct    Float?
  securityData    Json?
  
  website         String?
  twitter         String?
  telegram        String?
  discord         String?
  
  launchedAt      DateTime
  firstSeenAt     DateTime @default(now())
  lastUpdatedAt   DateTime @updatedAt
  
  @@index([chain])
  @@index([viralScore])
  @@index([firstSeenAt])
}

model ScanLog {
  id          String   @id @default(cuid())
  chain       String
  tokensFound Int
  scanTime    DateTime @default(now())
  
  @@index([scanTime])
}

// Auth & subscriptions
model User {
  id            String    @id @default(cuid())
  email         String?   @unique
  emailVerified DateTime?
  name          String?
  image         String?
  hashedPassword String?
  walletAddress String?   @unique  // Solana wallet for wallet-based login
  phone         String?
  country       String?
  experienceTradingCrypto String?  // e.g. beginner | intermediate | expert
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  subscriptions Subscription[]
  pinnedTokens  PinnedToken[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Subscription {
  id           String   @id @default(cuid())
  userId       String
  plan         String   // "1month" | "3month" | "6month"
  amountUsd    Int      // 250, 700, 1400
  expiresAt    DateTime
  txSignature  String?  // Solana tx signature for verification
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([userId])
  @@index([expiresAt])
}

// Admin-managed tracked wallets for Wallet Tracker (3+ wallets buy same coin â†’ alert)
model TrackedWallet {
  id        String   @id @default(cuid())
  address   String   @unique
  label     String?
  createdAt DateTime @default(now())
  @@index([address])
}

// Admin-managed alert rules (e.g. min wallets that must buy same coin to trigger alert)
model AlertRule {
  id        String   @id @default(cuid())
  key       String   @unique // "wallet_tracker"
  minBuyers Int      @default(3)
  maxAgeHours Int    @default(24)
  maxAlerts Int      @default(30)
  updatedAt DateTime @updatedAt
}

// Pinned tokens for AI re-analysis every ~3 min
model PinnedToken {
  id              String    @id @default(cuid())
  userId          String
  contractAddress String
  symbol          String?
  name            String?
  pinnedAt        DateTime  @default(now())
  lastAnalyzedAt  DateTime?
  analysisResult  Json?     // { score, signal, reasons, recommendations, tokenInfo, ... }
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([userId, contractAddress])
  @@index([userId])
  @@index([lastAnalyzedAt])
}
